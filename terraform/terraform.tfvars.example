# AWS Configuration
aws_region  = "eu-west-1"  # Ireland region
aws_profile = "rotem-poc"  # AWS CLI profile to use

# Project Configuration
project_name = "demoapp"
environment  = "dev"

# EKS Cluster Configuration
cluster_name    = "demoapp-eks-cluster"
cluster_version = "1.27"

# VPC Configuration
vpc_cidr        = "10.0.0.0/16"
private_subnets = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
public_subnets  = ["10.0.101.0/24", "10.0.102.0/24", "10.0.103.0/24"]

# Node Group Configuration
node_instance_types    = ["t3.medium"]  # Change for production: ["m5.large", "m5.xlarge"]
node_group_min_size    = 1
node_group_max_size    = 3
node_group_desired_size = 2

# Application Configuration
domain_name = "demoapp.com"

